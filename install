#!/usr/bin/env bash

# Homebrew
url="https://raw.githubusercontent.com"
url="${url}/Homebrew/install/master/install"
echo | ruby -e "$(curl -fsSL ${url})" > /dev/null
brew tap caskroom/cask # https://caskroom.github.io/
brew install tmux

# Oh-my-zsh
rm -Rf ~/.oh-my-zsh
rm -f ~/.zshrc
rm -f ~/.zshrc.pre-oh-my-zsh*
url="https://raw.githubusercontent.com"
url="${url}/robbyrussell/oh-my-zsh/master/tools/install.sh"
curl -#L $url | bash

# Git clone
cd ~/Desktop || exit
rm -rf .git
git init
git remote add origin https://github.com/cgerke/dots
git fetch --all
git reset --hard origin/master
git checkout master
git push --set-upstream origin master

# Symlink dot files
for i in ".ssh" ".vim" ".gitconfig" ".gitmessage" ".vimrc" ".zshrc"
do
	ln -fns ~/Desktop/${i} ~/${i}
done

# Terminal Theme
defaults read com.apple.Terminal | grep "lucario"
if [ $? != 0 ]; then
defaults write com.apple.Terminal "Default Window Settings" "lucario"
defaults write com.apple.Terminal "Startup Window Settings" "lucario"
osascript <<EOD
tell application "Terminal"
	local openedWin
	local initialWin
	local i
	set themeName to "lucario"
	(* Store the IDs of all the open terminal windows. *)
	set initialWin to id of every window
	(* Open the custom theme so that it gets added to the list
     of available terminal themes (note: this will open two
     additional terminal windows). *)
	do shell script "open '~/Desktop/" & themeName & ".terminal'"
	(* Wait a little bit to ensure that the custom theme is added. *)
	delay 1
	(* Set the custom theme as the default terminal theme. *)
	set default settings to settings set themeName
	(* Get the IDs of all the currently opened terminal windows. *)
	set openedWin to id of every window
	repeat with i in openedWin
		(* Close the additional windows that were opened in order
       to add the custom theme to the list of terminal themes. *)
		if initialWin does not contain i then
			close (every window whose id is i)
			(* Change the theme for the initial opened terminal windows
       to remove the need to close them in order for the custom
       theme to be applied. *)
		else
			set current settings of tabs of (every window whose id is i) Â¬
				to settings set themeName
		end if
	end repeat
end tell
EOD
fi

# Chflags cleanup desktop
for i in "install" "lucario.terminal" "README.md" "vscode.code-workspace"
do
	chflags -h hidden ~/Desktop/${i}
done

exit 0
